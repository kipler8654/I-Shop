<?xml version="1.0" encoding="UTF-8"?>
<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
    <servlet-name>UserRegistrationServlet</servlet-name>
    <servlet-class>ua.ishop.trofimov.controller.RegisterAndLogin.UserRegistrationServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>UserRegistrationServlet</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ForgotPasswordServlet</servlet-name>
    <servlet-class>ua.ishop.trofimov.controller.RegisterAndLogin.ForgotPasswordServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ForgotPasswordServlet</servlet-name>
    <url-pattern>/restorePassword</url-pattern>
  </servlet-mapping>
</web-app>
